{
  "info": {
    "name": "WorkWhile API",
    "description": "Complete API collection for WorkWhile job platform. Set {{baseUrl}} (e.g. http://localhost:5000/api) and run Auth > Login to save {{token}} for protected routes.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:5000/api" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Health & Status",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/health",
            "description": "API health check"
          }
        },
        {
          "name": "Ping",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/ping",
            "description": "Simple ping"
          }
        },
        {
          "name": "API Status",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{baseUrl}}/status",
            "description": "API status and endpoints"
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.data && json.data.token) {",
                  "  pm.collectionVariables.set('token', json.data.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"candidate@example.com\",\n  \"password\": \"Password123!\",\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\",\n  \"role\": \"candidate\"\n}"
            },
            "url": "{{baseUrl}}/auth/register",
            "description": "Register new user. Roles: candidate, employer, admin"
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.data && json.data.token) {",
                  "  pm.collectionVariables.set('token', json.data.token);",
                  "  console.log('Token saved to collection variable');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@workwhile.com\",\n  \"password\": \"Admin123!\"\n}"
            },
            "url": "{{baseUrl}}/auth/login",
            "description": "Login â€“ saves token to collection variable for other requests"
          }
        },
        {
          "name": "Get Me",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/auth/me",
            "description": "Get current user (requires auth)"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/auth/logout",
            "description": "Logout (requires auth)"
          }
        },
        {
          "name": "Forgot Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\"\n}"
            },
            "url": "{{baseUrl}}/auth/forgot-password",
            "description": "Request password reset email"
          }
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"token\": \"<reset-token-from-email>\",\n  \"password\": \"NewPassword123!\"\n}"
            },
            "url": "{{baseUrl}}/auth/reset-password",
            "description": "Reset password with token from email"
          }
        }
      ]
    },
    {
      "name": "Jobs",
      "item": [
        {
          "name": "Get All Jobs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/jobs?page=1&limit=50&sortBy=createdAt&sortOrder=desc",
              "host": ["{{baseUrl}}"],
              "path": ["jobs"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "50" },
                { "key": "search", "value": "", "disabled": true },
                { "key": "location", "value": "", "disabled": true },
                { "key": "type", "value": "", "disabled": true },
                { "key": "category", "value": "", "disabled": true },
                { "key": "sortBy", "value": "createdAt" },
                { "key": "sortOrder", "value": "desc" }
              ]
            },
            "description": "List jobs with optional filters. Auth optional."
          }
